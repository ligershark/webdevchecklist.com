<?xml version="1.0" encoding="utf-8" ?>
<checklist>
  <category name="Best practices">
    <rule name="Fix broken links">
      <link url="//validator.w3.org/checklink">W3C link checker</link>
      <link url="//iwebtool.com/broken_link_checker">iWebTool Broken Link Checker</link>
    </rule>
    <rule name="Spell-check" />
    <rule name="Check website in all browsers">
      <link url="//blogs.msdn.com/b/synergist/archive/2012/04/23/making-a-great-snapped-view-for-your-web-site-on-ie10-on-windows-8.aspx">Win8 snapped sites</link>
      <link url="//browsershots.org/">BrowserShots.org</link>
      <link url="//browserling.com/">Browserling.com</link>
      <link url="//spoon.net/browsers">Spoon.net</link>
    </rule>
    <rule name="Remove 'www' subdomain">
      <link url="//no-www.org/verify.php">no-www.org score of B</link>
      <link url="//keyvan.io/remove-www-prefix-from-urls-with-url-rewrite-module-for-iis-7-0">Remove "www" in web.config</link>
    </rule>    
  </category>

  <category name="Mobile">
    <rule name="MobileOK score of 75+">
      <link url="//validator.w3.org/mobile/">W3C mobile checker</link>
    </rule>
    <rule name="Use 'viewport' meta-tag">
      <link url="//webdesign.tutsplus.com/tutorials/htmlcss-tutorials/quick-tip-dont-forget-the-viewport-meta-tag/">Don’t Forget the Viewport Meta Tag</link>
      <link url="//www.hanselman.com/blog/MakeYourWebsiteMobileAndIPhoneFriendlyAddHomeScreenIPhoneIconsAndAdjustTheViewPort.aspx">Make your website mobile friendly</link>
    </rule>
    <rule name="Use correct input types">
      <link url="//html5tutorial.info/html5-contact.php">Input type: Email, Url, Phone</link>
      <link url="//diveintohtml5.info/forms.html">Diving in to HTML5 forms</link>      
    </rule>
    <rule name="Manual check using emulators">
      <link url="//www.webdesignerdepot.com/2012/11/6-free-mobile-device-emulators-for-testing-your-site/">6 free mobile emulators</link>
      <link url="//www.opera.com/developer/tools/mobile/">Opera Mobile Emulator</link>
    </rule>
  </category>

  <category name="Analytics">
    <rule name="Uptime monitoring">
      <link url="//www.uptimerobot.com/">Uptime robot</link>
      <link url="//www.gotsitemonitor.com/">GotSiteMonitor.com</link>
    </rule>
    <rule name="Traffic analysis">
      <link url="//www.google.com/analytics">Google Analytics</link>
      <link url="//statcounter.com/">StatCounter</link>
      <link url="//clicky.com/">Clicky</link>
    </rule>
  </category>

  <category name="Accessibility">
    <rule name="Accessibility validation">
      <link url="//accessibility.oit.ncsu.edu/accessibleu/problems.html">Common problems and solutions</link>
      <link url="//achecker.ca/checker/index.php">IDI Web Accessibility Checker</link>
      <link url="//wave.webaim.org/">WAVE accessibility checker</link>
    </rule>
    <rule name="Color contrast">
      <link url="//www.checkmycolours.com/">Check color contrast online</link>
    </rule>
    <rule name="Implement WAI-ARIA" optional="true">
      <link url="//www.alistapart.com/articles/the-accessibility-of-wai-aria/">Guide to WAI-ARIA</link>
      <link url="//www.w3.org/WAI/presentations/2012/WWW2012.html">Getting started with accessibility</link>
      <link url="//www.punkchip.com/2010/11/aria-basic-findings/">Practical examples</link>
    </rule>
  </category>

  <category name="Usability">
    <rule name="HTML5 compatibility check">
      <link url="//ie.microsoft.com/testdrive/HTML5/CompatInspector/">Compat Inspector</link>
      <link url="//modernizr.com/">Modernizr JS library</link>
    </rule>
    <rule name="Custom 404 page">
      <link url="//www.alistapart.com/articles/amoreuseful404/">A more useful 404</link>
      <link url="//www.stokia.com/support/misc/web-config-custom-httperrors.aspx">Custom error pages in ASP.NET</link>
    </rule>
    <rule name="Favicon">
      <link url="//tools.dynamicdrive.com/favicon/">Online generator</link>
      <link url="//stackoverflow.com/questions/3728392/whats-the-optimal-html-link-syntax-to-use-for-site-icons-favions">How to properly link a favicon</link>
    </rule>
    <rule name="Use friendly URLs">
      <link url="//www.seomoz.org/blog/11-best-practices-for-urls">11 best practices for URLs</link>
      <link url="//www.iis.net/learn/extensions/url-rewrite-module/url-rewrite-module-configuration-reference">URL rewriting in IIS</link>
      <link url="//httpd.apache.org/docs/current/mod/mod_rewrite.html">URL rewrite in Apache</link>
    </rule>
    <rule name="Add P3P policy" optional="true">
      <link url="//msdn.microsoft.com/en-us/library/ms537341.aspx">How to deply P3P</link>
      <link url="//support.microsoft.com/kb/324013">Configure IIS to use P3P</link>
      <link url="//www.w3.org/P3P/validator.html">P3P validator</link>
    </rule>
    <rule name="Add search feature" optional="true">
      <link url="//www.google.com/cse/">Google Custom Search</link>
      <link url="//www.opensearch.org/">Browser Integration with Open Search</link>
    </rule>
    <rule name="Environment Integration" optional="true">
      <link url="//developer.apple.com/library/ios/#documentation/AppleApplications/Reference/SafariWebContent/ConfiguringWebApplications/ConfiguringWebApplications.html">Safari on iOS</link>
      <link url="//msdn.microsoft.com/en-us/library/ie/hh781490%28v=vs.85%29.aspx">Internet Explorer on Windows</link>
    </rule>
  </category>

  <category name="Code quality">
    <rule name="HTML validation">
      <link url="//validator.w3.org/">W3C HTML validator</link>
      <link url="//watson.addy.com/">Dr. Watson</link>
    </rule>
    <rule name="CSS validation">
      <link url="//jigsaw.w3.org/css-validator/">W3C CSS validator</link>
    </rule>
    <rule name="World ready">
      <link url="//validator.w3.org/i18n-checker/">W3C i18n checker</link>
    </rule>
    <rule name="Run CSS Lint">
      <link url="//csslint.net/">Run CSS Lint online</link>
      <link url="//visualstudiogallery.msdn.microsoft.com/a921b98e-9430-4be2-bf53-1169e12bdb50">CssCop for VS 2010</link>
      <link url="//vswebessentials.com/">Web Essentials for VS2012</link>
    </rule>
    <rule name="Run JSLint/JSHint">
      <link url="//jslint.org/">Run JSLint online</link>
      <link url="//jshint.com/">Run JSHint online</link>
      <link url="//vswebessentials.com/">Web Essentials for VS2012</link>
    </rule>
    <!--<rule name="RSS/ATOM validation" optional="true">
      <link url="//validator.w3.org/feed/">W3C feed validator</link>
      <link url="//feedvalidator.org/">feedvalidator.org</link>
    </rule>-->
  </category>

  <category name="Performance">
    <rule name="Google Page Speed score of 90+">
      <link url="//developers.google.com/speed/pagespeed/">Google Page Speed</link>
    </rule>
    <rule name="Yahoo YSlow score of 85+">
      <link url="//yslow.org/">Yahoo's YSlow</link>
      <link url="//mark.mymonster.nl/2011/10/18/improve-the-yslow-score-remove-the-etags">Remove ETags in ASP.NET</link>
    </rule>
    <rule name="Web Page Test score of 90+">
      <link url="//www.webpagetest.org/">WebPageTest.Org</link>
    </rule>
    <rule name="Optimize HTTP headers">
      <link url="//redbot.org">redbot.org</link>
    </rule>
    <rule name="Optimize images">
      <link url="//www.smushit.com/ysmush.it/">SmushIt.com</link>
      <link url="//punypng.com/">PunyPNG.com</link>
      <link url="//visualstudiogallery.msdn.microsoft.com/a56eddd3-d79b-48ac-8c8f-2db06ade77c3/">Image Optimizer for Visual Studio</link>
      <link url="//pnggauntlet.com/">PNGGauntlet application</link>
    </rule>
  </category>

  <category name="Semantics">
    <rule name="Add meaning with Microdata">
      <link url="//schema.org/">Schema.org reference</link>
      <link url="//schema-creator.org/">Schema-Creator.org</link>
    </rule>
    <rule name="Check the semantics">
      <link url="//www.w3.org/2003/12/semantic-extractor.html">W3C semantic extractor</link>
    </rule>
  </category>

  <category name="SEO">
    <rule name="SenSEO score of 85+">
      <link url="//addons.mozilla.org/en-US/firefox/addon/senseo/">SenSEO for Firefox</link>
    </rule>
    <rule name="Google Rich Snippets">
      <link url="//www.google.com/webmasters/tools/richsnippets">Online tester</link>
      <link url="//schema.org/docs/gs.html">Getting started</link>
    </rule>
    <rule name="robots.txt">
      <link url="//support.google.com/webmasters/bin/answer.py?hl=en&amp;answer=156449&amp;from=35237&amp;rd=1">robots.txt tutorial</link>
      <link url="//www.robotsgenerator.com/">Create robots.txt online</link>
    </rule>
    <rule name="XML sitemap">
      <link url="//www.xml-sitemaps.com/">Create sitemap online</link>
    </rule>
  </category>  

  <category name="Security">
    <rule name="Implement best practices">
      <link url="//www.owasp.org/index.php/Category:OWASP_Top_Ten_Project">OWASP Top 10 project</link>
      <link url="//www.owasp.org/index.php/Cheat_Sheets">OWASP Cheat Sheets</link>
      <link url="//asafaweb.com/">ASafaaWeb security analyzer</link>
    </rule>
    <rule name="Cross-site scripting">
      <link url="//www.owasp.org/index.php/XSS_(Cross_Site_Scripting)_Prevention_Cheat_Sheet">XSS cheat sheet</link>
      <link url="//www.owasp.org/index.php/DOM_based_XSS_Prevention_Cheat_Sheet">DOM based XSS cheat sheet</link>
      <link url="//www.acunetix.com/cross-site-scripting/scanner/">Free XSS scanner</link>
    </rule>
    <rule name="Cross-site request forgery">
      <link url="//www.codinghorror.com/blog/2008/09/cross-site-request-forgeries-and-you.html">Explanation and walkthrough</link>
      <link url="//www.owasp.org/index.php/Cross-Site_Request_Forgery_(CSRF)_Prevention_Cheat_Sheet">CSRF cheat sheet</link>
    </rule>
    <rule name="Prevent tampering">
      <link url="//advosys.ca/papers/web/60-form-tampering.html">Prevent HTML form tampering</link>
    </rule>
    <rule name="Secure connection (SSL)" optional="true">
      <link url="//support.microsoft.com/kb/299875">Setup SSL on IIS 7</link>
      <link url="//www.digicert.com/ssl-certificate-installation-apache.htm">Setup SSL on Apache</link>
      <link url="//certlogik.com/ssl-checker/">Online SSL checker</link>
    </rule>
    <rule name="HTTP Strict Transport Security (HSTS)" optional="true">
      <link url="//developer.mozilla.org/en-US/docs/Security/HTTP_Strict_Transport_Security">MDN Overview</link>
      <link url="//www.owasp.org/index.php/HTTP_Strict_Transport_Security">OWASP Overview</link>
    </rule>
    <rule name="Content Security Policy (CSP)" optional="true">
      <link url="//www.html5rocks.com/en/tutorials/security/content-security-policy/">HTML5 Rocks Introduction</link>
    </rule>
    <rule name="crossdomain.xml" optional="true">
      <link url="//www.adobe.com/devnet/articles/crossdomain_policy_file_spec.html">Cross-domain policy file specification</link>
    </rule>
  </category>

</checklist>
